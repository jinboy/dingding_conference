<wxs src="index.wxs" module="album"></wxs>
<view class="container l-class" style="{{album.containerStyle(urls, multipleSize, gapRow, gapColumn)}}">
    <block a:for="{{urls}}" a:key="index">
        <image id="{{index}}" onTap="onPreviewTap" class="{{album.blockClass(urls, horizontalScreen)}}"
               style="{{album.blockStyle(urls, horizontalScreen, shortSideValue, singleSize, multipleSize)}}"
               src="{{newType?item[key]:item}}" mode="{{urls.length === 1?singleMode:multipleMode}}"/>
    </block>
</view>
